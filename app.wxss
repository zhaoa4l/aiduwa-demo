/* reset */
page {
  background-color: white;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}
checkbox, radio{
  margin-right: 10rpx;
}
button{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
form{
  width: 100%;
}

/* templates */
.readnumbers > .gray{
  line-height: 1.8;
  color: #4a4a4a;
  font-size: 24rpx;
}
.readnumbers > .read{
  display: flex;
  width: 198rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 24rpx;
  border: 1px solid #ff0000;
  text-align: center;
}
.readnumbers > .read > view:first-of-type{
  width: 50%;
  background-color: #ff0000;
  color: white;
}
.readnumbers > .read > view:nth-of-type(2){
  width: 50%;
  color: #ff0000;
}
.statusitem{
  position: relative;
  text-align: center;
  font-size: 24rpx;
  color: #585858;
}
.statusitem > image{
  display: block;
  margin: auto;
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 12rpx;
}
.statusitem > label{
  background-color: white;
  position: absolute;
  left: 50%;
  top: -16rpx;
  display: block;
  width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #d72727;
  border: 3rpx solid #d72727;
  border-radius: 50%;
}
.itembook{
  background-color: white;
  display: flex;
  width: 100%;
  height: 228rpx;
  border-bottom: 1rpx solid #e3e5e9;
}

/* .itembook:last-of-type {
  border-bottom: none;
} */

.itembook > .content-img{
  position: relative;
  padding: 15rpx 20rpx;
  width: 175rpx;
  height: inherit;
}

.itembook > .content-img > .tip{
  position: absolute;
  top: 10rpx;
  left: 26rpx;
  width: 31rpx;
  height: 39rpx;
  background-image: url("data:image/png;base64,");
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center center;
  display: block;
  text-align: center;
  line-height: 1.4;
  font-size: 24rpx;
  color: white;
}

.itembook > .content-img > image{
  max-width: 100%;
  max-height: 90%;
}
.itembook > .content-body{
  position: relative;
  padding: 20rpx;
  padding-left: 0;
  width: 575rpx;
  height: inherit;
}
.itembook > .content-body > .text{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-size: 26rpx;
  line-height: 1.4;
}
.itembook > .content-body > .red{
  font-size: 22rpx;
  color: #d23333;
  line-height: 1.8;
}
.itembook > .content-body > .bottom{
  position: absolute;
  left: 0;
  top: 52%;
  width: 100%;
  height: auto;
}
.itembook > .content-body > .bottom > .comment{
  position: absolute;
  bottom: 0;
  right: 20rpx;
  font-size: 20rpx;
  color: #2d2d2d;
}
.itembook > .content-body > .bottom > .comment > span{
  color: #0037a8;
}

/* checkbox */
.checkbox{
  width: 100%;
  height: 100%;
  position: relative;
}
.checkbox > image{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
  width: 37rpx;
  height: 37rpx;
}

/* remark */
.remark{
  background-color: white;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #e3e5e9;
  font-size: 24rpx;
  color: #7a7a7a;
}

/* 评论模板 */
.comment-item{
  background-color: white;
  border-bottom: 1rpx solid #e3e5e9;
}
.comment-item > .footer,
.comment-item > .header {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.comment-item > .header > image{
  width: 159rpx;
  height: 23rpx;
}
.comment-item > .footer > text,
.comment-item > .header > text{
  float: right;
  font-size: 24rpx;
  color: #8e8e8e;
}
.comment-item > .body{
  padding: 5rpx 30rpx;
}
.comment-item > .body > text{
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  font-size: 28rpx;
  color: #212121;
}
.comment-item > .body > .images {
  display: flex;
  margin-top: 20rpx;
}
.comment-item > .body > .images > image{
  width: 24%;
  height: 160rpx;
  margin-right: 7rpx;
}
